<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.ltt.dao.CdRegisterTaskDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.ltt.entity.CdRegisterTaskEntity" id="cdRegisterTaskMap">
        <result property="id" column="id"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="numberThreads" column="number_threads"/>
        <result property="numberRegistered" column="number_registered"/>
        <result property="numberSuccesses" column="number_successes"/>
        <result property="numberFailures" column="number_failures"/>
        <result property="registrationStatus" column="registration_status"/>
        <result property="deleteFlag" column="delete_flag"/>
        <result property="createTime" column="create_time"/>
        <result property="atOrderId" column="at_order_id"/>
    </resultMap>

    <select id="sumByTaskId" resultType="java.lang.Integer">
        SELECT
            SUM( total_amount ) AS totalAmount
        FROM
            cd_register_task
        WHERE
            id = #{id}
           OR fill_up_register_task_id = #{id}
    </select>


    <select id="queryLineRegister" resultType="io.renren.modules.ltt.dto.CdRegisterTaskOrderDTO">
        select t.id                  as taskId,
               t.registration_status as registrationStatus,
               s.subtasks_id         as subtasksId,
               r.id                  as lineRegisterId,
               r.token               as lineRegisterToken
        from cd_register_task t
                 inner join cd_register_subtasks s on t.id = s.task_id
                 inner join cd_line_register r on s.id = r.subtasks_id
        where t.delete_flag = 1
          and s.delete_flag = 1
          and r.delete_flag = 1
          and t.at_order_id = #{atOrderId}
          and r.register_status = #{registerStatus}
    </select>


</mapper>
